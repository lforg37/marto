
// NODE_PREFIX The prefix used to name Types used to represent this operator
//             our internal name for the operator
// BACKEND_NAME The name the backend(sollya for now) uses to refer to this
//              operator
// FRONTEND_NAME The name of the user facing function or variable

#ifndef OPERATOR
#define OPERATOR(NODE_PREFIX, BACKEND_NAME, FRONTEND_NAME)
#endif

#ifndef UNARY_OPERATOR
#define UNARY_OPERATOR(NODE_PREFIX, BACKEND_NAME, FRONTEND_NAME)               \
  OPERATOR(NODE_PREFIX, BACKEND_NAME, FRONTEND_NAME)
#endif

#ifndef BINARY_OPERATOR
#define BINARY_OPERATOR(NODE_PREFIX, BACKEND_NAME, FRONTEND_NAME)              \
  OPERATOR(NODE_PREFIX, BACKEND_NAME, FRONTEND_NAME)
#endif

// Also Constant are also called Nullary
#ifndef CONSTANT_OPERATOR
#define CONSTANT_OPERATOR(NODE_PREFIX, BACKEND_NAME, FRONTEND_NAME)            \
  OPERATOR(NODE_PREFIX, BACKEND_NAME, FRONTEND_NAME)
#endif

UNARY_OPERATOR(Sin, sin, sin)
UNARY_OPERATOR(Neg, neg, neg)
UNARY_OPERATOR(Log2, log2, log2)
UNARY_OPERATOR(Log, log, log)
UNARY_OPERATOR(Abs, abs, abs)

BINARY_OPERATOR(Mul, mul, operator*)
BINARY_OPERATOR(Add, add, operator+)
BINARY_OPERATOR(Sub, sub, operator-)
BINARY_OPERATOR(Div, div, operator/)
BINARY_OPERATOR(Pow, pow, pow)

CONSTANT_OPERATOR(Pi, pi, pi)

#undef OPERATOR
#undef UNARY_OPERATOR
#undef BINARY_OPERATOR
#undef CONSTANT_OPERATOR
